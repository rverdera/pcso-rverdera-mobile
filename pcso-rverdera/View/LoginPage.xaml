<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"   
             Routing.Route="Login"
             x:Class="pcso_rverdera.View.LoginPage"
             Title="LoginPage">
    <StackLayout>
        <Label 
            FontSize="40"
            Text="Login"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            Text="{Binding Username}"
            Margin="20,20,20,0"
            FontSize="30"
            Placeholder="Type user"/>
        <Entry
            Text="{Binding Username}"
            Margin="20,5,20,20"
            FontSize="30"
            Placeholder="Type password"
            IsPassword="true"/>
        <Button
            Margin="20,0,20,20"
            Text="Submit"
            FontSize="30"/>
    </StackLayout>
</ContentPage>
